{
  "name": "@bun-move/web",
  "version": "0.1.1",
  "private": true,
  "description": "TortoiseOS Web Frontend",
  "scripts": {
    "dev": "next dev -p ${WEB_PORT:-3000}",
    "build": "next build",
    "start": "next start -p ${WEB_PORT:-3000}",
    "lint": "next lint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next node_modules/.cache",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@bun-move/env": "workspace:*",
    "@mysten/dapp-kit": "^0.14.0",
    "@mysten/sui.js": "^0.54.1",
    "@radix-ui/themes": "^3.0.0",
    "@tanstack/react-query": "^5.51.1",
    "@tortoise-os/burner-wallet": "workspace:*",
    "@tortoise-os/components": "workspace:*",
    "@tortoise-os/core": "workspace:*",
    "@tortoise-os/hooks": "workspace:*",
    "@tortoise-os/sdk": "workspace:*",
    "@tortoise-os/ui": "workspace:*",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tortoise-os/terrapin": "workspace:*",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.2"
  }
}
